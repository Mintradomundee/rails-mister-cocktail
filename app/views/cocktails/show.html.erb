<div class="container">
  <h2><%= @cocktail.name %></h2>


    <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 200, crop: :fill %>
    <% end -%>


  <% if @cocktail.doses.empty? %>
    <p>No ingredients yet.<p>
  <% else %>
    <h6> Doses and Ingredients </h6>
    <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> <%= link_to 'Delete dose', dose_path(dose), method: :delete %>  <%= dose.ingredient.name %></li>
    <% end %>
    </ul>
  <% end %>
  <%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail) %>
  <br>
  <%= link_to 'Go back', cocktails_path %>
</div>
